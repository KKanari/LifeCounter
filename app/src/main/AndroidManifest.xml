<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="application.example.kms2.mtglifecounter"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Include required permissions for Google Mobile Ads to run-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="application.example.kms2.mtglifecounter.Globals"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--This meta-data tag is required to use Google Play Services.-->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name="application.example.kms2.mtglifecounter.MainActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="application.example.kms2.mtglifecounter.Dice"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name="application.example.kms2.mtglifecounter.Coin"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name="application.example.kms2.mtglifecounter.History"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name="application.example.kms2.mtglifecounter.Memo"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name="application.example.kms2.mtglifecounter.Manual"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name="application.example.kms2.mtglifecounter.Setting_Main"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name="application.example.kms2.mtglifecounter.Setting_Picker"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name="application.example.kms2.mtglifecounter.SettingActivity"
            android:screenOrientation="sensorLandscape"></activity>

        <!--Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent"/>

    </application>
</manifest>
